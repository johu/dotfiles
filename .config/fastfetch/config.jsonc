{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "source": "~/.config/fastfetch/larry.png",
        "type": "kitty-icat",
        "height": 15,
        "width": 30,
        "padding": {
            "top": 5,
            "left": 3
        }
    },
    "display": {
        "separator": " "
    },
    "modules": [
        "break",
        {
            "type": "custom",
            "format": "\u001b[90m┌───────────────────── Hardware ─────────────────────┐"
        },
        {
            "type": "host",
            "key": "   ",
            "keyColor": "green"
        },
        {
            "type": "cpu",
            "key": "   ",
            "showPeCoreCount": true,
            "keyColor": "green"
        },
        {
            "type": "gpu",
            "key": "   ",
            "keyColor": "green"
        },
        {
            "type": "memory",
            "key": "   ",
            "keyColor": "green"
        },
        {
            "type": "disk",
            "key": "   ",
            "keyColor": "green"
        },
        {
            "type": "custom",
            "format": "\u001b[90m└────────────────────────────────────────────────────┘"
        },
        {
            "type": "custom",
            "format": "\u001b[90m┌───────────────────── Software ─────────────────────┐"
        },
        {
            "type": "os",
            "key": "   ",
            "keyColor": "yellow"
        },
        {
            "type": "kernel",
            "key": "   ",
            "keyColor": "yellow"
        },
        {
            "type": "packages",
            "key": "  󰏖 ",
            "keyColor": "yellow"
        },
        {
            "type": "terminal",
            "key": "   ",
            "keyColor": "yellow"
        },
        {
            "type": "shell",
            "key": "   ",
            "keyColor": "yellow"
        },
        {
            "type": "custom",
            "format": "\u001b[90m   ────────────────────── UI ──────────────────────── "
        },
        {
            "type": "de",
            "key": "   ",
            "keyColor": "blue"
        },
        {
            "type": "lm",
            "key": "   ",
            "keyColor": "blue"
        },
        {
            "type": "wm",
            "key": "   ",
            "keyColor": "blue"
        },
        {
            "type": "wmtheme",
            "key": "  󰉼 ",
            "keyColor": "blue"
        },
        {
            "type": "gpu",
            "key": "  󰍛 ",
            "format": "{3}",
            "keyColor": "blue"
        },
        {
            "type": "custom",
            "format": "\u001b[90m└────────────────────────────────────────────────────┘"
        },
        {
            "type": "custom",
            "format": "\u001b[90m┌─────────────────── Age / Uptime ───────────────────┐"
        },
        {
            "type": "command",
            "key": "   ",
            "keyColor": "magenta",
            "text": "birth_install=$(stat -c %W /); current=$(date +%s); time_progression=$((current - birth_install)); days_difference=$((time_progression / 86400)); echo $days_difference days"
        },
        {
            "type": "uptime",
            "key": "   ",
            "keyColor": "magenta"
        },
        {
            "type": "custom",
            "format": "\u001b[90m└────────────────────────────────────────────────────┘"
        },
    ]
}
